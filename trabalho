// Declaração de structs
struct cidade {
    int codigo_cidade;
    string nome; 
    string uf;
};
struct indice_cidade {
    int codigo;
    int ender;
};
struct especialidade {
    int codigo_especialidade;
    string descricao;
};
struct indice_especialidade {
    int codigo;
    int ender;
};
struct medico {
    int cod_medico;
    string nome;
    int codigo_especialidade;
    string endereco;
    string numero;
    int codigo_cidade;
};
