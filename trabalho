    int codigo_cid;
    string descricao;
};
struct indice_CID {
    int codigo;
    int ender;
};
struct medicamento {
    int codigo_medicamento;
    string descricao;
    int quant_estoque;
    int estoque_min;
    int estoque_max;
    float preco_unitario;
};
